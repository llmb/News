<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="80dp"
              android:gravity="center_vertical"
              android:orientation="horizontal"
              android:background="@drawable/list_item_select_light"
              android:layout_marginLeft="5dp"
              android:layout_marginRight="5dp"
    >
    <com.suixingame.news.view.ScreenImageView
        android:id="@+id/niv_image"
        android:layout_width="@dimen/newsData_item_type1_image_width"
        android:layout_height="@dimen/newsData_item_type1_image_height"
        android:layout_margin="5dp"
        android:scaleType="centerInside"
        android:visibility="visible"
        />

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="80dp"
        android:layout_weight="1"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        >
        <TextView
            android:id="@+id/tv_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textColor="#333333"
            android:maxLines="2"
            android:ellipsize="end"
            android:layout_alignParentTop="true"
            android:layout_marginTop="5dp"
            />
        <RelativeLayout
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="5dp"
            android:layout_marginRight="10dp"
            >
            <TextView
                android:id="@+id/tv_source"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="天外来物"/>

            <TextView
                android:id="@+id/tv_seeNumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0人看过"
                android:layout_alignParentRight="true"
                android:drawablePadding="2dp"
                />
        </RelativeLayout>
    </RelativeLayout>
</LinearLayout>