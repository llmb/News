<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="160dp"
              android:paddingLeft="10dp"
              android:paddingRight="2dp"
              android:background="@drawable/list_item_select_light"
              android:gravity="center_vertical"
              android:orientation="vertical"
    >

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="5dp"
        android:ellipsize="none"
        android:maxLines="1"
        android:textColor="#333333"
        android:textSize="16sp"
        android:gravity="center_vertical"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/newsData_item_type2_image_height"
        android:orientation="horizontal"
        android:padding="5dp">

        <com.suixingame.news.view.ScreenImageView
            android:id="@+id/niv_image1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:scaleType="centerInside"
            />

        <com.suixingame.news.view.ScreenImageView
            android:id="@+id/niv_image2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="10px"
            android:layout_weight="1"
            android:scaleType="centerInside"
            />

        <com.suixingame.news.view.ScreenImageView
            android:id="@+id/niv_image3"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="10px"
            android:layout_weight="1"
            android:scaleType="centerInside"
            />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:layout_marginBottom="5dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="5dp"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        >
        <TextView
            android:id="@+id/tv_source"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="天外来物"/>

        <TextView
            android:id="@+id/tv_seeNumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawablePadding="2dp"
            android:text="0人看过"
            android:layout_alignParentRight="true"
            />
    </RelativeLayout>
</LinearLayout>