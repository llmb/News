<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusable="true"
    android:focusableInTouchMode="true"
    >
    <!--内容布局-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <com.suixingame.library.view.PullRefreshView
            android:id="@+id/lv_content_detail"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@color/content_white"
            android:divider="@null"
            android:visibility="invisible"
            />
        <!--底部评论发送布局-->
        <android.support.v7.widget.CardView
            android:id="@+id/cv_bottom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="#f1f1f1"
            android:visibility="invisible"
            app:cardCornerRadius="3dp"
            app:cardElevation="14dp"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                >

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:paddingLeft="3dp"
                    >

                    <EditText
                        android:id="@+id/et_comment"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@null"
                        android:drawableLeft="@drawable/comment_pen"
                        android:hint="发表评论"
                        android:imeOptions="actionSend"
                        android:inputType="textMultiLine"
                        android:maxLines="4"
                        android:minHeight="47dp"
                        android:textCursorDrawable="@drawable/edittext_cursor_drawable"
                        android:textSize="14sp"
                        />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginBottom="2dp"
                        android:layout_marginLeft="2dp"
                        android:background="@color/gray"
                        />
                </LinearLayout>

                <ImageView
                    android:id="@+id/iv_comment_send"
                    android:layout_width="40dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/list_item_select_light"
                    android:src="@drawable/send_comment"
                    android:visibility="gone"
                    />

                <TextView
                    android:id="@+id/tv_comment_number"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_margin="8dp"
                    android:background="@drawable/list_item_select_light"
                    android:drawableLeft="@drawable/icon_activity_comment"
                    android:drawablePadding="2dp"
                    android:gravity="center_vertical"
                    android:text="0"
                    android:textSize="14sp"
                    />
            </LinearLayout>
        </android.support.v7.widget.CardView>
    </LinearLayout>

    <!--错误信息-->
    <RelativeLayout
        android:id="@+id/rl_error_message_root"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:id="@+id/tv_error_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:drawablePadding="10dp"
            android:drawableTop="@drawable/loading_error"
            android:gravity="center"
            android:text="点击屏幕,重新获取"
            android:textSize="14sp"
            android:visibility="invisible"
            />
        <ProgressBar
            android:id="@+id/pb_error_message"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_centerInParent="true"
            android:indeterminateDuration="1000"
            android:indeterminateTint="@color/red"
            android:indeterminateTintMode="src_atop"
            />
    </RelativeLayout>
</RelativeLayout>
